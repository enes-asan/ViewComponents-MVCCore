@model ViewComponents.CategoryListViewModel


<h3 class="text-center text-warning">Category List</h3>

<ul class="list-group ">
    <li class="list-group-item bg-danger" ><a class="text-decoration-none text-white" href="/home/index">All Products</a> </li>
    @foreach (var item in Model.Categories)
    {
        if (Model.CategoryId == item.CategoryId.ToString())
        {
            <li class="list-group-item active"><a class=" text-decoration-none text-white" href="/home/index?categoryId=@item.CategoryId">@item.CategoryName</a> </li>
        }
        else
        {
            <li class="list-group-item  bg-danger "><a class=" text-decoration-none  text-white" href="/home/index?categoryId=@item.CategoryId">@item.CategoryName</a> </li>
        }
    }
</ul>